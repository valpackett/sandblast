{
	"ipv4": "192.168.1.99",
	"hostname": "firefox.jail",
	"process": "#!/bin/sh\nrm /var/run/dbus/dbus.pid; service dbus onestart; exec su firefox -c 'DISPLAY=parenthost:0 exec firefox -no-remote'",
	"plugins": [
		{
			"name": "mount_dir",
			"options": { "source": "/var/worlds/10.1-RELEASE", "mode": "ro" }
		},
		{
			"name": "mount_dir",
			"options": { "source": "/var/containers/firefox", "mode": "rw" }
		},
		{
			"name": "mount_dir",
			"options": { "source": "/usr/local/lib/X11/fonts", "destination": "/usr/local/lib/X11/fonts", "mode": "ro" }
		},
		{
			"name": "mount_dir",
			"options": { "source": "/home/dovahkiin/.fonts", "destination": "/home/firefox/.fonts", "mode": "ro" }
		},
		{
			"name": "copy",
			"options": { "source": "/home/dovahkiin/.config/fontconfig/fonts.conf", "destination": "/home/firefox/.config/fontconfig/fonts.conf", "mode": "ro" }
		},
		{
			"name": "copy",
			"options": { "source": "/home/dovahkiin/.gtkrc.mine", "destination": "/home/firefox/.gtkrc-2.0" }
		},
		"mount_dev",
		{
			"name": "netif_alias",
			"options": { "iface": "vtnet0" }
		},
		{
			"name": "xhost",
			"options": { "xauthority": "/home/dovahkiin/.Xauthority" }
		},
		{
			"name": "etc_hosts",
			"options": { "iface": "vtnet0" }
		}
	]
}
